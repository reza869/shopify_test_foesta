{% liquid
  assign theme_rtl = false
  if settings.enable_rtl and settings.langauges_rtl == blank
    assign theme_rtl = true
  endif

  if settings.enable_rtl and settings.langauges_rtl != blank
    assign rtl_languages = settings.langauges_rtl | split: ','
    for language in rtl_languages
      if language == request.locale.iso_code
        assign theme_rtl = true
      endif
    endfor
  endif
%}
{{ 'section-main-blog.css' | asset_url | stylesheet_tag }}
{{ 'section-featured-blog.css' | asset_url | stylesheet_tag }}

{%- style -%}
  {%- if section.settings.show_round_corner -%}
    #section--{{ section.id }} {
      --round_corner: 10px;
    }
  {% endif %}
  .search-widget svg {
      width: auto;
      height: 2rem;
  }
  .single-sidebar-widget  .search-widget {
      position: relative;
  }
  .single-sidebar-widget .search-widget input {
      background: 0 0;
      width: 100%;
      height: 40px;
      font-size: 1.6rem;
      line-height: 1.6rem;
      background-clip: padding-box;
      padding-left: 0;
      padding-right: 20px;
      margin: 0;
      border: none;
      color: rgb(var(--color-foreground));
      border-bottom: 2px solid rgb(var(--border-color));
  }
  .single-sidebar-widget .search-widget button {
  	position: absolute;
  	top: 0;
  	right: 0;
  	background-color: transparent !important;
  	border: none;
  	padding: 0;
      color: rgb(var(--color-foreground));
  }
  .single-sidebar-widget .search-widget input:focus {
      outline: 0;
      box-shadow: none;
  }
  .single-sidebar-widget h2 {
      font-size: 2.4rem;
  }
  .single-sidebar-widget {
      margin-bottom: 4rem;
      color: rgb(var(--color-foreground));
  }
  ul.archive-sidebar {
      margin: 0;
      padding: 0;
      list-style: none;
  }
  .single-sidebar-widget dl  dd {
      padding: 0;
      margin: 0;
  }
  .single-sidebar-widget dl  dd {
      padding: 0;
      margin: 0;
  }
  ul.archive-sidebar li {
      margin-bottom: 1.5rem;
      line-height: 2.6rem;
  }
  .single-widget-post {
  	display: -webkit-box;
  	display: -ms-flexbox;
  	display: flex;
  	padding-bottom: 25px;
  	margin-bottom: 25px;
  	border-bottom: 1px solid #e7e7e7;
  }
  .single-widget-post .content {
  	-ms-flex-preferred-size: calc(100% - 100px);
  	flex-basis: calc(100% - 100px);
  	padding-left: 20px;
  }
  .widget-post-title a {
      font-size: 1.6rem;
  }
  h3.widget-post-title {
      margin-bottom: 0.4rem;
  }
  p.widget-post-date {
      font-size: 1.5rem;
      color: rgb(var(--color-foreground));
  }
  .tag-container a::after {
  	display: inline-block;
  	content: "/";
  	margin: 0 5px;
  }
  .tag-container a:last-child::after{
    display: none;
  }
  .blog-sidebar-banner img {
      width: 100%;
  }
  .single-sidebar-widget ul.custom_menu {
      margin: 0;
      padding: 0;
      list-style: none;
  }
  .single-sidebar-widget ul.custom_menu li {
      margin-bottom: 0.5rem;
  }
  .single-widget-post:last-child {
      border: 0;
      margin: 0;
      padding: 0;
  }
  .article-card__info>*+* {
      margin-top: 1rem;
  }
  span.person_svg svg {
      width: auto;
      height: 1.7rem;
      position: relative;
      top: 0.3rem;
  }
  span.article__button--title a {
      text-decoration: underline;
      text-underline-offset: 3px;
      letter-spacing: 1px;
      color: rgba(var(--color-foreground), 1);
      text-transform: uppercase;
      font-weight: 500;
      font-size: 1.5rem;
  }
  span.article__button--title a:hover {
      color: rgba(var(--color-foreground), 0.6);

  }
  .meta__info--item+.meta__info--item:before{

    display:none;
  }
  .meta__info--item+.meta__info--item {
      padding-left: 2rem;
      margin-left: 0;
      position: relative;
  }
  span.person_svg svg#Capa_1 {
      margin-right: 3px;
  }
  .blog-articles__article.article {
      margin-bottom: 45px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  @media only screen and (min-width: {{ settings.container_lg_width }}px){
    .blog-articles__article.first--article .article-card__info {
      padding-left: 100px;
      padding-right: 140px;
    }
  }
{%- endstyle -%}
{% if theme_rtl %}
  {{ 'main-blog-rtl.css' | asset_url | stylesheet_tag }}
{% endif %}

{%- paginate blog.articles by section.settings.article_to_show -%}
  <div
    id="section--{{ section.id }}"
    class="main-blog section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}"
  >
    <div class="container">
      <div class="row {% if section.settings.sidebar_handle == 'right_sidebar_handle' and theme_rtl == false %}flex-row-reverse{% endif %} {% if theme_rtl == true and section.settings.sidebar_handle == 'left_sidebar_handle' %}flex-row-reverse{% endif %}">
        {%- unless section.settings.sidebar_handle == 'without_sidebar' -%}
          <div class="col-lg-3 order-2 order-lg-1">
            <div class="blog-articles-sidebar ">
              {% render 'blog-sidebar' %}
            </div>
          </div>
        {% endunless %}
        {%- liquid
          if section.settings.sidebar_handle == 'without_sidebar'
            assign column = 'col-lg-12'
          else
            assign column = 'col-lg-9'
          endif
          assign space_bottom = 'mb-30'
        -%}
        <div class="blog-articles__article_area  {{ column }} ">
          <div class="blog-articles {% if section.settings.layout == "standard" %} row {% endif %}">
            {%- for article in blog.articles -%}
              <div class="blog-articles__article article color-{{ section.settings.color_scheme_card }} {{ space_bottom }} {% if section.settings.layout == "standard" %} col-lg-6 {% endif %}">
                {% render 'article-card',
                  show_content: section.settings.show_content,
                  blog: section.settings.blog,
                  article: article,
                  show_image: section.settings.show_image,
                  show_date: section.settings.show_date,
                  show_author: section.settings.show_author,
                  show_comment: section.settings.show_comment,
                  hover_arrow: section.settings.hover_arrow,
                  article_btn: article_btn,
                  media_height: section.settings.image_ratio,
                  media_aspect_ratio: article.image.aspect_ratio
                %}
              </div>
            {%- endfor -%}
          </div>
          {%- if paginate.pages > 1 -%}
            {%- render 'pagination', paginate: paginate -%}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
{%- endpaginate -%}

