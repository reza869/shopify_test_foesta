	{
         "type": "checkbox",
         "id": "show_breadcrumb_navigation",
         "default": true,
         "label": "Show breadcrumb navigation"
       },

	{
         "type": "select",
         "id": "text_center",
         "label": "Text Align",
         "options": [
           {
             "label": "Left",
             "value": "left"
           },
           {
             "label": "Right",
             "value": "right"
           },
		{
             "label": "Center",
             "value": "center"
           }
         ],
         "default": "center"
       },
	 {
     "type": "header",
     "content": "Section padding"
   },
{
         "type": "paragraph",
         "content": "Desktop"
       },
       {
         "type": "range",
         "id": "padding_top",
         "min": 0,
         "max": 150,
         "step": 5,
         "unit": "px",
         "label": "Padding top",
         "default": 100
       },
       {
         "type": "range",
         "id": "padding_bottom",
         "min": 0,
         "max": 150,
         "step": 5,
         "unit": "px",
         "label": "Padding bottom",
         "default": 100
       },
	{
         "type": "paragraph",
         "content": "Mobile"
       },
	{
         "type": "range",
         "id": "mobile_padding_top",
         "min": 0,
         "max": 150,
         "step": 5,
         "unit": "px",
