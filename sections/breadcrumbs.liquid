   "name": "Page title banner",
   "settings": [
	{
         "type": "color_scheme",
         "id": "color_scheme",
         "default": "scheme-12",
         "label": "t:sections.header.settings.color_scheme.label"
       },
	{
         "type": "checkbox",
         "id": "show_page_title",
         "default": true,
         "label": "Show page heading"
